void imprimirTodo(){
    imprimirArtistas();
    imprimirCanciones();
    imprimirAlbumes();
    imprimirGeneros();
    imprimirPlaylist();
    imprimirSellos();
}

void reportesArtistas() {
    if (headArtistas == nullptr) {
        cout << "No hay artistas ingresados en la base de datos." << endl;
        return;
    }

    Artistas* temp = headArtistas;

    cout << "~~~~~~~~~~~~~~~~~~~~~ Artistas ~~~~~~~~~~~~~~~~~~~~~" << endl << endl;
    while (temp != nullptr) {
        cout << "Nombre real: " << temp->nombre << endl << "Nombre artístico: " << temp->nombreArtista << endl << "Identificador: " 
        << temp->ID << endl << "País: " << temp->pais << endl<< "Sello Discográfico: " << temp->sello << endl;

        if (temp->subLAlbumes == nullptr) {
            cout << "Las listas de albumes y artistas están vacías." << endl;
            cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
        } else {
            cout << " ~~~~~~~~~~~~ Álbumes ~~~~~~~~~~~~ " << endl;

            subLAlbumes* tempo = temp->subLAlbumes;
            int i = 1;

            while (tempo != nullptr) {
                if (tempo->enlace != nullptr) {
                    cout << i << "- " << tempo->enlace->titulo << ": " << endl;
                    subLcanciones* tempa = tempo->enlace->subLcanciones;

                    if (tempa == nullptr) {
                        cout << "No hay canciones ingresadas en el álbum." << endl;
                    } 
                    else {
                        int j = 1;
                        while (tempa != nullptr) {
                            if (tempa->enlace != nullptr) {
                                cout << "\t" << j << "- " << tempa->enlace->titulo << endl;
                            }
                            tempa = tempa->sig;
                            j++;
                        }
                    }
                } 
                else {
                    cout << "Álbum no válido o sin enlace." << endl;
                }

                tempo = tempo->sig;
                i++;
            }
        }

        cout << endl << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl << endl;
        temp = temp->sig;
    }
}

void imprimirPlaylistCanciones() {
    if (headPlaylists == nullptr) {
        cout << "No hay playlist registradas en el sistema" << endl;
        return;
    }

    Playlists* temp = headPlaylists;

    cout << "~~~~~~~~~~~~~~~~~~~~~ Playlist ~~~~~~~~~~~~~~~~~~~~~" << endl << endl;
    while (temp != nullptr) {
        subLcanciones* tempo = temp->subLcanciones;
        int i = 1;

        cout << " ~~~~~~~~~~~~~~~~~~~~ " << temp->nombre << " ~~~~~~~~~~~~~~~~~~~~ " << endl;
        if (tempo == nullptr || tempo->enlace == nullptr) {
            cout << "No hay canciones ingresadas en la playlist." << endl;
        } 
        else {
            while (tempo != nullptr) {
                if (tempo->enlace != nullptr) {
                    cout << i << "- " << tempo->enlace->titulo << endl;
                }
                tempo = tempo->sig;
                i++;
            }
        }

        cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl << endl;
        temp = temp->sig;
    }
}

void ImprimirAlbumesCanciones() {
    if (headAlbumes == nullptr) {
        cout << "No hay álbumes ingresados en el sistema." << endl;
        return;
    }

    Albumes* temp = headAlbumes;

    cout << "~~~~~~~~~~~~~~~~~~~~~ Álbumes ~~~~~~~~~~~~~~~~~~~~~" << endl << endl;
    while (temp != nullptr) {
        subLcanciones* tempo = temp->subLcanciones;
        int i = 1;

        if (tempo == nullptr) {
            cout << "El álbum no tiene canciones ingresadas." << endl;
        } else {
            cout << " ~~~~~~~~~~~~~~~~~~~~ Canciones ~~~~~~~~~~~~~~~~~~~~ " << endl;
            while (tempo != nullptr) {
                if (tempo->enlace != nullptr) {
                    cout << i << "- " << tempo->enlace->titulo << endl;
                    cout << "Duración: " << tempo->enlace->minutos << ":"
                         << (tempo->enlace->segundos < 10 ? "0" : "") << tempo->enlace->segundos << endl;
                }
                tempo = tempo->sig;
                i++;
            }
        }

        cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl << endl;
        temp = temp->sig;
    }
}

void imprimirSellosArtista() {
    if (headSellos == nullptr) {
        cout << "No hay sellos discográficos agregados." << endl;
        return;
    }

    Sellos* temp = headSellos;
    int i = 1;

    cout << " ~~~~~~~~~~~~~~~~~~~~~~ Sellos Discográficos ~~~~~~~~~~~~~~~~~~~~~~ " << endl << endl;
    do {
        subLArtistas* tempo = temp->subLArtistas;
        int j = 1;

        if (tempo == nullptr) {
            cout << "No hay elementos asociados." << endl;
        } else {
            cout << i << "- " << temp->nombre << endl << endl << " ~~~~~~~~ Artistas ~~~~~~~~ " << endl;
            while (tempo != nullptr) {
                if (tempo->enlace != nullptr) {
                    cout << j << "- " << tempo->enlace->nombreArtista << endl;
                }
                tempo = tempo->sig;
                j++;
            }
        }

        cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
        temp = temp->sig;
        i++;
    } while (temp != headSellos);
}

void numeroAlbum(){
    int canciones;

    cout << "Por favor ingrese la cantidad que deben superar los álbumes." << endl;
    canciones = validarEntero();
    AlbumMasCanciones(canciones);

}

void anoCancion(){
    int ano;

    cout << "Por favor ingrese los años de las canciones que desea buscar." << endl;
    ano = validarEntero();
    CancionesPorAno(ano);

}

/*Funciones para el menu y validación de datos*/
void insertarDatosCanciones(){
    int idCan, idArti, ano, idAlbu, minu, seg;
    string titulo;

    cout << "Por favor ingrese el identificador de la canción: " << endl;
    idCan = validarEntero();

    while(idCan<=0){
        cout << "Valor invalido, intentelo de nuevo: " << endl;
        idCan = validarEntero();
    }

    if(buscarCancion(idCan)!=nullptr){
        cout << "La canción ya ha sido ingresado." << endl;
        return;
    }

    cout << "Por favor ingrese el identificador del álbum al que pertenece la canción: " << endl;
    idAlbu = validarEntero();

    while(idAlbu<=0){
        cout << "Valor invalido, intentelo de nuevo: " << endl;
        idAlbu = validarEntero();
    }

    if(buscarAlbum(idAlbu)==nullptr){
        cout << "El álbum no se encuentra ingresado, por favor ingrese primero el álbum: " << endl;
        return;
    }

    cout << "Por favor ingrese el identificador del artista al que pertenece la canción: " << endl;
    idArti = validarEntero();

    while(idArti<=0){
        cout << "Valor invalido, intentelo de nuevo: " << endl;
        idArti = validarEntero();
    }

    if(buscarArtista(idArti)==nullptr){
        cout << "El artista no se encuentra ingresado, por favor ingrese primero el artista: " << endl;
        return;
    }

    cout << "Por favor ingrese el año de la canción: " << endl;
    ano = validarEntero();

    while(ano<0|| ano>2025){
        cout << "Valor invalido, intentelo de nuevo: " << endl;
        ano = validarEntero();
    }

    cout << "Por favor ingrese los minutos que dura la canción: " << endl;
    minu = validarEntero();

    while(minu<=0){
        cout << "Valor invalido, intentelo de nuevo: " << endl;
        minu = validarEntero();
    }

    cout << "Por favor ingrese los segundos que dura la canción: " << endl;
    seg = validarEntero();

    while(seg<0 || seg>60){
        cout << "Valor invalido, intentelo de nuevo." << endl;
        seg = validarEntero();
    }

    cout << "Por favor ingrese el nombre de la canción que desea ingresar: " << endl;
    getline(cin, titulo);
    while (!validar(titulo)) {
        cout << "Título invalido, por favor ingreselo de nuevo: " << endl;
        getline(cin, titulo);
    }

    insertarCanciones(idCan,titulo, ano, minu, seg, idAlbu, idArti);
    insertarCancionEnAlbum(idAlbu, idCan);
    insertarCancionEnArtista(idArti, idCan);

    cout << "Canción ingresada al sistema con éxito." << endl;
}

void modificarDatosCanciones(){
    int idCan;
    string nuevoTitulo;

    idCan = validarEntero();

    if(buscarCancion(idCan)==nullptr){
        cout << "El artista no se encuentra ingresado en el sistema." << endl;
        return;
    }

    cout << "Por favor ingrese el nuevo nombre de la canción: " << endl;
    getline(cin, nuevoTitulo);
    while (!validar(nuevoTitulo)) {
        cout << "Nombre invalido, por favor ingreselo de nuevo: " << endl;
        getline(cin, nuevoTitulo);
    }

    modificarCancion(idCan, nuevoTitulo);
}

void buscarDatosCanciones(){
    int idCancion;

    cout << "Por favor ingrese el identificador de la canción que desea buscar." << endl;
    idCancion = validarEntero();
    Canciones *temp = buscarCancion(idCancion);

    if(temp==nullptr){
        cout << "La canción no ha sido ingresada al sistema." << endl;
        return;
    }

    cout << "Información de la canción: " << endl << "Nombre: " << temp->titulo << endl << "Identificador: " << endl 
    << temp->ID << endl << "Duración de la cancion: " << temp->minutos << ":" << (temp->segundos < 10 ? "0" : "") 
    << temp->segundos << endl << "Año de publicación: " << temp->ano << "Identificador del artista al que pertenece: " 
    << temp->IDartista << endl << "Identificador del álbum al que pertenece: " << temp->IDalbum;
    
}

void eliminarDatosCanciones(){
    int idCancion;

    cout << "Por favor ingrese el identificador de la canción que desea buscar." << endl;
    idCancion = validarEntero();
    if(buscarCancion(idCancion)==nullptr){
        cout << "La canción no se encuentra ingresada en el sistema." << endl;
        return;
    }

    eliminarCancion(idCancion);
}

void menuMantenimientoCanciones(){
    int opcion;
    
    do{
        cout << "Por favor ingrese que acción desea realizar en la lista de canciones:" << endl
        << "1- Insertar datos." << endl << "2- Modificar datos." << endl << "3- Buscar datos." << endl
        << "4- Eliminar datos." << endl << "5- Volver al menú principal." << endl;
    
        opcion = validarEntero();

        switch (opcion)
        {
        case 1:
            insertarDatosCanciones();
            break;
        case 2:
            modificarDatosCanciones();
            break;
        case 3:
            buscarDatosCanciones();
            break;
        case 4:
            eliminarDatosCanciones();
            break;
        case 5:
            cout << "Volviendo al menu principal." << endl;
            return;
        default:
            cout << "Opción invalida, intentelo de nuevo." << endl;
        }

    } while(true);
}


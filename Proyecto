void menuMantenimiento(){
    int opcion;
    do{
        cout << "Por favor ingrese de que lista desea hacer mantenimiento: " << endl
        << "1- Canciones." << endl << "2- Artistas." << endl << "3- Álbumes." << endl
        << "4- Géneros musicales." << endl << "5- Playlist." << endl 
        << "6- Sellos discográficos." << endl << "7- Volver al menu principal" << endl;
    
        opcion = validarEntero();
        switch (opcion)
        {
        case 1:
            menuMantenimientoCanciones();
            break;
        case 2: 
            menuMantenimientoArtistas();
            break;
        case 3:
            menuMantenimientoAlbumes();
            break;
        case 4:
            menuMantenimientoGeneros();
            break;
        case 5:
            menuMantenimientoPlaylist();
            break;
        case 6:
            menuMantenimientoSellos();
            break;
        case 7:
            cout << "Volviendo al menú principal." << endl;
            return;
        default:
            cout << "Opción invalida, intente de nuevo." << endl;
        }
    } while(true);
}

void menuConsultas(){
    int opcion;
    do{

        cout << "Por favor ingrese que consulta desea realizar: " << endl
        << "1- Géneros con más canciones registradas." << endl 
        << "2- Artista con más álbumes publicados." << endl
        << "3- Canción más larga en la base de datos" << endl
        << "4- Playlist con más canciones." << endl
        << "5- Cuantos álbumes tiene cada artista." << endl
        << "6- Sello discográfico con mayor cantidad de artistas" << endl
        << "7- Canciones publicadas en determinado año." << endl
        << "8- Álbumes que superen cierta cantidad de canciones." << endl
        << "9- Regresar al menú principal." << endl;
    
        opcion = validarEntero();

        switch (opcion)
        {
        case 1:
            GeneroMasCanciones();
            break;
        case 2:
            ArtistaMasAlbum();
            break;
        case 3:
            CancionMasLarga();
            break;
        case 4:
            PlaylistMasCanciones();
            break;
        case 5:
            albumArtista();
            break;
        case 6:
            SelloMasArtistas();
            break;
        case 7:
            anoCancion();
            break;
        case 8:
            numeroAlbum();
            break;
        case 9:
            cout << "Volviendo al menú principal." << endl;
            return;
        default:
            cout << "Opción no valida, intente de nuevo." << endl;
        }

    } while(true);
}

void menuReportes(){
    int opcion;
    
    do{
        cout << "Por favor indique el reporte que desea consultar: " << endl
        << "1- Imprimir todas las listas principales." << endl
        << "2- Reportes detallado de los artistas." << endl
        << "3- Playlist" << endl << "4- Álbumes." << endl
        << "5- Sellos discográficos." << endl
        << "6- Volver al menú principal." << endl;
    
        opcion = validarEntero(); 
        
        switch (opcion)
        {
        case 1:
            imprimirTodo();
            break;
        case 2:
            reportesArtistas();
            break;
        case 3:
            imprimirPlaylist();
            break;
        case 4:
            imprimirAlbumes();
            break;
        case 5:
            imprimirSellos();
            break;
        case 6:
            cout << "Volviendo al menu principal: " << endl;
            return;
        default:
            cout << "Opción no valida, ingrese de nuevo" << endl;
        }

    } while(true);
}

void menuPrincipal(){
    int opcion;

    do{

        cout << "Bienvenido al sistema musical MusiGest, por favor ingrese que desea realizar: " << endl
        << "1- Mantenimiento." << endl << "2- Consultas" << endl << "3- Reportes." << endl
        << "4- Salir." << endl;
    
        opcion = validarEntero();
    
        switch (opcion)
        {
        case 1:
            menuMantenimiento();
            break;
        case 2:
            menuConsultas();
            break;
        case 3:
            menuReportes();
            break;
        case 4:
            cout << "Saliendo del sistema." << endl;
            break;
        default:
            cout << "Opción no valida, intente de nuevo." << endl;
        }
    }while(opcion!=4);


}

int main(){
    cargarDatos();
    menuPrincipal();
    return 0;
}

    Sellos *modificar = buscarSello(id);

    if(modificar==nullptr){
        cout << "El sello discográfico no se encuentra ingresado." << endl;
        return;
    }

    modificar->nombre = nuevoNombre;
    cout << "El nombre del sello discográfico ha sido modificado con éxito." << endl;
}

void modificarSelloPais(int id, string nuevoPais){
    Sellos *modificar = buscarSello(id);

    if(modificar==nullptr){
        cout << "El sello discográfico no se encuentra ingresado." << endl;
        return;
    }

    modificar->pais = nuevoPais;
    cout << "El país del sello discográfico ha sido modificado con éxito." << endl;

}

void eliminarArtistaSello(int idArti, int idSello){
    Sellos *buscar = buscarSello(idSello);

    if(buscar == nullptr){
        cout << "No hay sellos discográficos ingresados en el sistema" << endl;
        return;
    }

    subLArtistas* actual = buscar->subLArtistas;
    subLArtistas* anterior = nullptr;

    while (actual != nullptr) {
        if (actual->enlace->ID == idArti) {
            if (anterior == nullptr) {
                buscar->subLArtistas = actual->sig;
            } else {
                anterior->sig = actual->sig;
            }

            delete actual;
            buscar->artistas--;
            cout << "Artista eliminado del sello con éxito." << endl;
            return;
        }

        anterior = actual;
        actual = actual->sig;
    }

    cout << "Artista no encontrado en el sello." << endl;


}

void eliminarSello(int id){
    Sellos *eliminar = headSellos;
    Sellos *ant = nullptr;

    if(headSellos==nullptr){
        cout << "No hay sellos discográficos ingresados en el sistema." << endl;
        return;
    }

    do{
        ant = eliminar;
        eliminar = eliminar->sig;
    } while(eliminar!=headSellos);

    if(eliminar->ID!=id){
        cout << "El sello discográfico no se encuentra ingresado." << endl;
        return;
    }

    ant->sig = eliminar->sig;
    eliminar->sig->ant = ant;

    subLArtistas *borrar = eliminar->subLArtistas;

    while(borrar!=nullptr){
        eliminarArtistaSello(borrar->enlace->ID, id);
        borrar = borrar->sig;
    }

    delete eliminar;
    cout << "El sello discográfico ha sido eliminado con éxito." << endl;

}

